<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.y7.paint.ActionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/action_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view activity" />

        <Button
            android:id="@+id/action_floating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="floating activity" />


        <Button
            android:id="@+id/action_apk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="apk activity" />

        <Button
            android:id="@+id/action_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pay activity" />

        <Button
            android:id="@+id/action_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog activity" />

        <Button
            android:id="@+id/action_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alert activity" />

        <Button
            android:id="@+id/action_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotate activity" />

    </LinearLayout>


</FrameLayout>
